<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<class 
    name="com.seeyon.v3x.edoc.domain.EdocBody" 
    table="edoc_body"
    lazy="false"
>
    <id
        name="id"
        type="long"
        column="id"
        length="20"
    >
        <generator class="assigned" />
    </id>
    <property
        name="content"
        type="string"
        column="content"
    />
    <property
        name="contentType"
        type="string"
        column="content_type"
        not-null="true"
        length="20"
    />
    <property
        name="contentName"
        type="string"
        column="content_name"
        not-null="false"
        length="32"
    />
    <property
        name="contentStatus"
        type="java.lang.Integer"
        column="content_status"
        length="4"
    />
    <property
        name="createTime"
        type="timestamp"
        column="create_time"
        not-null="true"
        length="19"
    />
    <property
        name="lastUpdate"
        type="timestamp"
        column="last_update"
        not-null="true"
        length="19"
    />
    <property
        name="contentNo"
        type="integer"
        column="content_no"
        length="4"
    />

    <!-- Associations -->
    <!-- bi-directional many-to-one association to EdocSummary -->
    <many-to-one
        name="edocSummary"
        class="com.seeyon.v3x.edoc.domain.EdocSummary"
        lazy="false"
    >
        <column name="edoc_id" length="20"/>
    </many-to-one>

</class>
</hibernate-mapping>
